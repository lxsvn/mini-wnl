/* pages/fand/fand.wxss */
page{
  background: #f2f2f2;
}
.content{
  overflow: hidden
}
.fand{
  width: 90%;
  background: #fff;
  border: 1rpx solid #ccc;
  margin: 40rpx auto 0
}
.fand-top image{
  width: 120rpx;
  height: 120rpx;
  display: block;
  background: olive;
  margin: 30rpx auto 0
}
.fand-top text{
  margin-top: 25rpx;
}
.fand-top text:nth-child(3){
  font-size: 40rpx
}
.fand text{
  display: block;
}
.fand-top{
   text-align: center;
}
.fand-center {
  font-size: 38rpx;
  margin-top: 50rpx;
  text-align: center;
}
.fand-bottom{
  width: 90%;
  border-top: 1px solid #eccc76;
  margin: 80rpx auto 100rpx;
  overflow: hidden;
}
.fand-bottom-lists{
  float: left;
  margin-top: 30rpx;
  margin-right: 25rpx
}
.fand-bottom-lists image{
    width: 130rpx;
    height: 130rpx;
    background: orange;
    margin-top: 20rpx
}
.fand-text text{
  display: block;
  text-align: center;
  font-size: 30rpx;
  margin-top: 10rpx
}
.fand-text text:nth-child(2){
  color: #999;
  font-size:28rpx;
  margin-top: 5rpx
}
.fand-bottom-lists:nth-child(1) text{
  font-size: 35rpx;
  line-height: 60rpx
}
.fand-bottom-lists:nth-child(2) text{
  font-size: 32rpx;
  line-height: 60rpx;
  color: #999
}
.fand-bottom-lists:nth-child(3) {
 margin-right: 0rpx ;
 float: right
 
}
.fand-bottom-lists:nth-child(3) text {
 font-size: 30rpx;
 color: #666
 
}
.fand-text{
  text-align: center;
  width: 100%;
  height: 100rpx;
  margin: 30rpx 0
}