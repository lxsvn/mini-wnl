/* pages/festival/festival.wxss */
page{
  background: #f2f2f2;
}
.festival{
  width: 95%;
  background: #ffffff;
  margin:  20rpx auto
}
.festival image{
  width: 50rpx;
  height: 50rpx;
  float: left;
  margin-top: 25rpx;
  margin-right: 30rpx;
}
.festival-data{
  width: 90%;
  height: 100rpx;
  border-bottom: 4rpx solid #f2f2f2;
  margin: 0 auto;
  line-height: 100rpx;
}
.festival-two{
  width: 90%;
  height: 100rpx;
  border-bottom: 4rpx solid #f2f2f2;
  margin: 0 auto;
  line-height: 100rpx;
}
.festival-hot{
  width: 90%;
  height: 100rpx;
  line-height: 100rpx;
  margin: 0 auto
}
.festival-data-show{
  width: 80%;
  margin-left: 15%
}
.festival-data-show>view{
  width: 100%;
  height: 120rpx;
  border-bottom: 4rpx solid #f2f2f2;
}
.festival-data-show-left{
  float: left;
  margin-top: 15rpx;
}
.festival-data-show-left text{
  display: block;
  font-size: 32rpx;
}
.festival-data-show-left text:nth-child(2){
  color: #999;
  font-size: 28rpx;
  margin-top: 10rpx;
}
.festival-data-show-right text{
  float: right;
  line-height: 120rpx;
  color: #666;
  font-size: 30rpx;
  height: 100%;
  text-align: right;
}
