/* pages/search/search.wxss */

page {
  height: 100%;
  font-size: 32rpx;
}

.search-lists {
  width: 95%;
  float: right;
  border-bottom: 4rpx solid #e5e5e5;
  height: 150rpx;
}

.search-lists-index {
  width: 15%;
  height: 100%;
  float: left;
  text-align: center;
  line-height: 150rpx;
  color: #3dcc7a;
  font-size: 36rpx;
}

.search-lists-center {
  width: 60%;
  height: 100%;
  float: left;
}

.search-lists-center-name {
  margin-top: 15rpx;
  font-size: 30rpx;
  color: #333;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  align-content: center;
}

.search-lists-center-bottom {
  overflow: hidden;
  margin-top: 15rpx;
  font-size: 26rpx;
  color: #999;
}

.search-lists-center-bottom-author {
  float: left;
  max-width: 300rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.search-lists-center-bottom-open {
  float: left;
  margin-left: 25rpx;
}

.search-lists-center-bottom-open image {
  width: 26rpx;
  height: 26rpx;
  margin-right: 10rpx;
}

.index-lists-lists-right {
  float: right;
  width: 25%;
  height: 150rpx;
  position: relative;
}

.index-lists-btn {
  width: 140rpx;
  height: 60rpx;
  border: 4rpx solid #3dcc7a;
  border-radius: 15rpx;
  text-align: center;
  line-height: 60rpx;
  position: absolute;
  top: 50%;
  margin-top: -30rpx;
}

.search-lists-open {
  width: 25%;
  height: 100%;
  float: right;
  position: relative;
}

.search-lists-open-btn {
  width: 140rpx;
  font-size: 28rpx;
  height: 60rpx;
  border: 1rpx solid #3dcc7a;
  border-radius: 15rpx;
  color: #3dcc7a;
  text-align: center;
  line-height: 60rpx;
  position: absolute;
  top: 50%;
  background: #fff;
  margin-top: -30rpx;
}

.music {
  width: 100%;
  height: 120rpx;
  background: #f4f5f9;
  position: fixed;
  bottom: 0;
}

.music-play {
  width: 20%;
  float: left;
  height: 100%;
}

.music-play-photo {
  width: 100rpx;
  height: 100rpx;
  background: #00d58d;
  margin-left: 35rpx;
  margin-top: 10rpx;
  border-radius: 15rpx;
  overflow: hidden;
}

.music-play-photo image {
  width: 100%;
  height: 100%;
}

.music-center {
  width: 60%;
  float: left;
  height: 100%;
  font-size: 34rpx;
}

.music-center-name {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  align-content: center;
  margin-top: 25rpx;
  color: #333;
}

.music-center-bottom {
  font-size: 28rpx;
  color: #999;
}

.search-list {
  width: 100%;
  margin-bottom: 130rpx;
  position: absolute;
  top: 0;
  left: 0;
}

.list {
  width: 100%;
  position: relative;
}
.music-right{
  width: 100rpx;
  height: 100rpx;
  float: right;
  margin-right: 35rpx;
  margin-top: 10rpx;
  position: relative;
}
.music-right-ok{
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  overflow: hidden;
  top: 0;
  left: 0;
  background: #ffffff
}
.music-right-ok image{
  width: 100%;
  height: 100%;
}
.cuu{
 z-index: 10
}
