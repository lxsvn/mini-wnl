page {
  height: 100%;
}
image{
  width: 100%;
}
.index-top {
  width: 100%;
  background: #eee;
  border-bottom: 1rpx solid #d3d3d3;
  box-shadow: 0px 1px 5px #ddd;
}

.index-top-search {
  width: 90%;
  height: 80rpx;
  background: #fff;
  margin: 0rpx auto 25rpx;
  position: relative
}
.index-top-search-lists{
  position: absolute;
  width: 100%;
  left: 0;
  top: 80rpx;
  z-index: 50;
  background: #fff;
}
.index-top-search-lists-tap{
  width: 100%;
  margin-left: 25rpx;
  font-size: 32rpx;
  color: #666;
  line-height: 70rpx;
}
.index-top-search input {
  width: 565rpx;
  height: 100%;
  float: left;
  margin-left: 30rpx;
  color: #949494;
  font-size: 32rpx;
}

.phcolor {
  color: #949494;
  font-size: 32rpx;
}

.index-top-search image {
  width: 60rpx;
  height: 60rpx;
  float: right;
  margin: 10rpx 10rpx 0rpx 0;
}

.index-top-tap {
  width: 100%;
  height: 80rpx;
}

.index-top-tap-list {
  width: 50%;
  height: 100%;
  float: left;
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #949494;
}

.index-top-tap-list-active {
  color: #343434;
  border-bottom: 8rpx solid #ff8200;
  font-size: 36rpx;
  box-sizing: border-box;
}

.index-bottom {
  width: 100%;
  position: relative;
}

.index-bookrack {
  display: none;
  width: 100%;
  height: 100%;
}

.bookrack {
  display: block;
}

.index-bookrack-lists {
  width: 33.3%;
  height: 320rpx;
  float: left;
  text-align: center;
}

.index-bookrack-lists image {
  width: 65%;
  height: 65%;
  display: block;
  margin: 25rpx auto 10rpx;
}

.index-bookrack-lists text {
  width: 100%;
  font-size: 30rpx;
  color: #999;
}

.zero-1 {
  width: 100%;
  height: 20rpx;
  background: #eee;
}

.index-recommend-man {
  width: 93%;
  margin: 15rpx auto 35rpx;
}

.index-recommend-man-top {
  margin: 25rpx 0 ;
}

.index-recommend-man-top text {
  margin: 15rpx 0;
  color: #333;
  font-size: 36rpx;
}

.index-recommend-man-top-list {
  width: 100%;
  overflow: hidden;
  margin-top: 20rpx;
}

.index-recommend-man-top-list-left {
  float: left;
  width: 22%;
}

.index-recommend-man-top-list-left image {
  width: 100%;
  height: 200rpx;
  background: olive;
}

.index-recommend-man-top-list-right {
  margin-left: 15rpx;
  float: right;
  width: 75%;
}

.index-recommend-man-top-list-right text {
  display: block;
  font-weight: bold;
  font-size: 37rpx;
}

.index-recommend-man-top-list-right text:nth-child(2) {
  font-weight: normal;
  font-size: 30rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-top: 10rpx;
}

.index-recommend-man-top-list-right-author {
  width: 100%;
  overflow: hidden;
  margin-top: 15rpx
}

.index-recommend-man-top-list-right-author image {
  float: left;
  width: 37rpx;
  height: 37rpx;
  margin-top: 10rpx;
  margin-right: 15rpx;
}
.index-recommend-man-top-list-right-author text{
  float: left;
}
.index-recommend-tap{
  float: right;
  font-size: 28rpx;
  margin-top: 10rpx;
  color: #666;
  padding: 5rpx 15rpx;
  border: 1rpx solid #666;
  border-radius: 50rpx;
}