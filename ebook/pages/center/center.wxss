.index-graded-center{
  float: left;
  width: 33.3%;
  height: 100%;
}
.index-graded-center text{
  display: block;
  text-align: center
}
.index-graded-center text:nth-child(1){
  font-size: 42rpx;
  font-weight: bold;
  color: #80848b
}
.index-graded-center text:nth-child(2){
  text-align: center;
  color:#9b9fa7;
  margin-top: 10rpx;
  font-size: 32rpx;
}
.index-graded-right{
  float: left;
  width: 30%;
  height: 100%;
}
.bottom{
  width: 100%;
  height: 120rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  border-top: 1rpx solid #ccc;
  background: #ffffff
}
.bottom-add{
  width: 50%;
  height: 100%;
  margin: 0 auto;
}
.bottom-add view{
  width: 80%;
  height: 80rpx;
  margin: 20rpx  auto;
  line-height: 80rpx;
  font-size: 32rpx;
  border-radius: 50rpx;
  text-align: center;
   
}
.bottom-add:nth-child(1) view{
 background:#feddc7;
 color: #ef5a18
}
.bottom-add:nth-child(2) view{
 background:#ef4744;
 color: #fffffd
}