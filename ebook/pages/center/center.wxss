.center{
  width: 100%;
  margin-bottom: 120rpx;
}
.index-intro{
  width: 90%;
  margin: 0 auto;
  overflow: hidden
}
.index-intro-top{
  margin: 35rpx 0 15rpx ; 
  width: 100%;
  overflow: hidden
}
.index-intro-top-left{
  float: left
}
.index-intro-top-right{
  float: right;
  font-size: 36rpx;
  color: #999
}
.index-intro-bottom{
  font-size: 32rpx;
  color: #666;
  line-height: 48rpx;
  text-indent: 60rpx;
   overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
 
  -webkit-box-orient: vertical;
  margin-top: 10rpx;
  margin-bottom: 25rpx;
}
.index-intro-top-list{
  overflow: hidden;
  width: 100%;
}
.index-intro-top-lists{
  float: left;
  font-size: 28rpx;
  background: #efeef4;
  color: #b9b8be;
  padding: 5rpx 18rpx;
  margin: 15rpx;
  border-radius: 50rpx;
}
.index-graded{
  width: 80%;
  height: 4rem;
  margin: 50rpx auto 0;
  font-size: 32rpx
}
.index-graded-left-start{
  width: 100%;
  overflow: hidden;
  margin-top: 15rpx;
}
.index-graded-left-start-five{
  float: left;
  width: 40%;
  height: 35rpx;
  margin-top: 20rpx;
  margin-left: 15rpx;
  position: relative
}
.index-graded-left-start-five image{
  width: 150rpx;
  height: 100%
}
.index-graded-left-start-five-1{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  overflow: hidden
}
.index-graded-left-bottom{
  text-align: center;
  color:#9b9fa7;
  margin-top: 10rpx;
}
